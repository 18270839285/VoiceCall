<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:gravity="center_vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp60"
        android:layout_margin="@dimen/dp15"
        android:src="@mipmap/wd_tx_nor" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:layout_toEndOf="@+id/iv_head"
        android:text="会飞的鱼"
        android:textColor="@color/textColor"
        android:textSize="@dimen/sp14" />

    <LinearLayout
        android:id="@+id/ll_sex_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginTop="@dimen/dp20"
        android:layout_toEndOf="@+id/tv_name"
        android:background="@drawable/shape_corner5_red"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp5"
        android:paddingRight="@dimen/dp5">

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:src="@mipmap/boy" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp2"
            android:text="22"
            android:textColor="@color/white"
            android:textSize="@dimen/sp10" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_msg_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_sex_age"
        android:layout_marginTop="@dimen/dp10"
        android:layout_toEndOf="@+id/iv_head"
        android:textColor="@color/textColor2"
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp20"
        android:text="会飞的鱼"
        android:textColor="@color/textSelectColor"
        android:textSize="@dimen/sp13" />

    <TextView
        android:id="@+id/tv_coin_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_state"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp10"
        android:text="会飞的鱼"
        android:textColor="@color/textColor666"
        android:textSize="@dimen/sp13" />
    <View
        android:layout_alignParentBottom="true"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"/>
</RelativeLayout>
