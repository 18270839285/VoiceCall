<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".dynamic.MyDynamicActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
           android:layout_centerHorizontal="true"
            android:layout_width="180dp"
            android:layout_height="48dp"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/textSelectColor"
            app:tabIndicatorHeight="1dp"
            app:tabMaxWidth="0dp"
            app:tabMode="fixed"
            app:tabPaddingStart="@dimen/dp5"
            app:tabSelectedTextColor="@color/textSelectColor"
            app:tabTextColor="@color/textColor2"></android.support.design.widget.TabLayout>
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="39dp"
            android:layout_height="@dimen/dp45"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:src="@mipmap/fh" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/line" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>