<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_corner_left_right10"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp15"
        android:text="服务选择"
        android:textColor="@color/textColor"
        android:textSize="@dimen/sp16" />

    <RelativeLayout
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginRight="@dimen/dp25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择时长"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp15" />
        <TextView
            android:id="@+id/tv_pay_one"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/分钟"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/sp14" />
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginLeft="@dimen/dp10"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginTop="@dimen/dp15"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="数量"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp14" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="27dp"
                android:layout_height="24dp"
                android:src="@mipmap/zbjn_jian" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="@dimen/dp25"
                android:layout_height="match_parent"
                android:background="#eeeeee"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/textColor" />

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="27dp"
                android:layout_height="24dp"
                android:src="@mipmap/zbjn_jia" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="费用总计"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/textSelectColor"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30"
        android:background="@mipmap/zc_button"
        android:gravity="center"
        android:text="立即支付"
        android:layout_marginBottom="@dimen/dp20"
        android:textColor="@color/textSelectColor"
        android:textSize="@dimen/sp16" />
</LinearLayout>
